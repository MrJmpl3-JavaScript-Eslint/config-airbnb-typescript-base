{
  "name": "eslint-config-airbnb-typescript-base",
  "description": "Airbnb Base Typescript config",
  "license": "MIT",
  "author": "Jos√© Manuel Casani Guerra <jmpl3.soporte@gmail.com>",
  "main": "index.js",
  "version": "2.0.0",
  "scripts": {
    "format": "yarn run format:package && yarn run format:prettier && yarn run format:eslint",
    "format:eslint": "eslint --fix ./ >/dev/null 2>&1 || true",
    "format:package": "prettier-package-json --write",
    "format:prettier": "prettier --write \"**/*.{js,json,md,yml}\" \".editorconfig\" \"LICENSE\"",
    "lint": "eslint ./",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "validate": "yarn run lint"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "confusing-browser-globals": "^1.0.10",
    "eslint": "^7.30.0",
    "eslint-import-resolver-ts": "^0.4.2",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-typescript-sort-keys": "^1.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "pinst": "^2.0.0",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  }
}
