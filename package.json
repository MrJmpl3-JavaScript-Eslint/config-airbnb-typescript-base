{
  "name": "eslint-config-airbnb-typescript-base",
  "description": "Airbnb Base Typescript config",
  "license": "MIT",
  "author": "Jos√© Manuel Casani Guerra <jmpl3.soporte@gmail.com>",
  "main": "index.js",
  "version": "3.0.1",
  "scripts": {
    "format": "yarn run format:package && yarn run format:prettier && yarn run format:eslint",
    "format:eslint": "eslint --fix ./ >/dev/null 2>&1 || true",
    "format:package": "prettier-package-json --write",
    "format:prettier": "prettier --write \"**/*.{js,json,md,yml}\" \".editorconfig\" \"LICENSE\"",
    "lint": "eslint ./",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "validate": "yarn run lint"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-typescript-sort-keys": "^2.1.0"
  },
  "devDependencies": {
    "commitlint": "^15.0.0",
    "commitlint-config-gitmoji": "^2.2.5",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.5.1",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "packageManager": "yarn@3.1.1"
}
